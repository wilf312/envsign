{
  "name": "envsign",
  "version": "0.0.1",
  "description": "",
  "main": "dist/build.js",
  "author": "OkadaGenya <g.okada.wilf@gmail.com>",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/wilf312/envsign",
  "keywords": [
    "environment"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env ENV_SIGN=dev1 NODE_ENV=production webpack --progress --hide-modules --mode production --watch",
    "unit": "cross-env BABEL_ENV=test karma start test/karma.conf.js --single-run",
    "lint": "eslint --ext .js,.vue src",
    "preversion": "npm run unit",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilf312/envsign.git"
  },
  "bugs": {
    "url": "https://github.com/wilf312/envsign/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.0",
    "cross-env": "^5.2.0",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8"
  },
  "global": [
    "ENV_SIGN"
  ],
  "envsign": {
    "local": {
      "color": "white",
      "bodyClass": "local",
      "text": "Local"
    },
    "dev1": {
      "color": "#fd7b7b",
      "bodyClass": "dev",
      "text": "Development"
    }
  }
}
